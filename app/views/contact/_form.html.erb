
<!-- This template for only contact form, not for left side static content -->

<%= form_with(scope: :contact, class: "contact100-form validate-form", url: "/contact", local: true) do |f| %>

      <!-- <form class="contact100-form validate-form"> -->
        <span class="contact100-form-title">
          <%= t 'send_us_message' %>
        </span>


        <% if @contact.errors.any? %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h4 class="alert-heading"> <%= t 'validation_error_message' %></h4>
            <ul>
              <% @contact.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% end %>


        <label class="label-input100" for="first-name"><%= t 'tell_us_your_name' %> *</label>
        <div class="wrap-input100 rs1-wrap-input100 validate-input" data-validate="Type first name">
          <!-- <input id="first-name" class="input100" type="text" name="first-name" placeholder="First name"> -->

          <%= f.text_field :first_name, class: "input100",  placeholder: "First name" %>

          <span class="focus-input100"></span>
        </div>
        <div class="wrap-input100 rs2-wrap-input100 validate-input" data-validate="Type last name">
          <!-- <input class="input100" type="text" name="last-name" placeholder="Last name"> -->
          <%= f.text_field :last_name, class: "input100",  placeholder: "Last name" %>
          <span class="focus-input100"></span>
        </div>

        <label class="label-input100" for="email"><%= t 'enter_your_email' %> *</label>
        <div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
          <!-- <input id="email" class="input100" type="text" name="email" placeholder="Eg. example@email.com"> -->
          <%= f.text_field :email, class: "input100",  placeholder: "Eg. example@email.com" %>
          <span class="focus-input100"></span>
        </div>

        <label class="label-input100" for="phone"><%= t 'enter_phone_number' %></label>
        <div class="wrap-input100">
          <!-- <input id="phone" class="input100" type="text" name="phone" placeholder="Eg. +1 800 000000"> -->
          <%= f.text_field :phone_number, class: "input100", placeholder: "Eg. +1 800 000000", maxlength: "13"%>
          <span class="focus-input100"></span>
        </div>

        <label class="label-input100" for="message"><%= t 'message' %> *</label>
        <div class="wrap-input100 validate-input" data-validate = "Message is required">
          <!-- <textarea id="message" class="input100" name="message" placeholder="Write us a message"></textarea> -->
          <%= f.text_area :message,  class: "input100",  placeholder: "Write us a message"%>
          <span class="focus-input100"></span>
        </div>

        <div class="container-contact100-form-btn">
          <button type="submit" class="contact100-form-btn"><%= t 'send_message'%></button>
          
        </div>
      <!-- </form> -->
      <% end %>